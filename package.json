{
  "name": "general-licence-manager",
  "version": "1.2.0",
  "type": "module",
  "description": "A tool for managing the licences issued by municipalities.",
  "exports": "./app.js",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "npx genversion --es6 --semi version.js",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "dev:live": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:* nodemon ./bin/www",
    "dev:test": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:*,pdf-puppeteer:*,puppeteer-launch TEST_DATABASES=true nodemon ./bin/www",
    "cy:open": "cypress open --config-file cypress.config.ts",
    "cy:run": "cypress run --config-file cypress.config.ts",
    "test": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:* TEST_DATABASES=true mocha --timeout 30000 --exit",
    "coverage": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:* TEST_DATABASES=true c8 --reporter=lcov --reporter=text --reporter=text-summary mocha --timeout 30000 --exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cityssm/general-licence-manager.git"
  },
  "author": "The Corporation of the City of Sault Ste. Marie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cityssm/general-licence-manager/issues"
  },
  "homepage": "https://github.com/cityssm/general-licence-manager#readme",
  "private": true,
  "dependencies": {
    "@cityssm/ad-web-auth-connector": "^1.1.1",
    "@cityssm/bulma-js": "^0.5.0",
    "@cityssm/bulma-webapp-js": "^1.5.0",
    "@cityssm/configurator": "^0.1.0",
    "@cityssm/eft-generator": "^0.0.5",
    "@cityssm/expressjs-server-js": "^2.3.3",
    "@cityssm/get-canadian-bank-name": "^0.3.1",
    "@cityssm/modern-julian-date": "^1.0.0",
    "@cityssm/pdf-puppeteer": "^4.2.0",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "activedirectory2": "^2.2.0",
    "better-sqlite3": "^10.0.0",
    "camelcase": "^8.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "debug": "^4.3.4",
    "ejs": "^3.1.10",
    "exit-hook": "^4.0.0",
    "express": "^4.19.2",
    "express-rate-limit": "^7.2.0",
    "express-session": "^1.18.0",
    "http-errors": "^2.0.0",
    "papaparse": "^5.4.1",
    "session-file-store": "^1.5.0",
    "slugify": "^1.6.6",
    "string-hash": "^1.1.3"
  },
  "devDependencies": {
    "@cityssm/bulma-webapp-css": "^0.12.0",
    "@cityssm/fa-glow": "^0.1.0",
    "@cityssm/mssql-multi-pool": "^3.1.5",
    "@types/activedirectory2": "^1.2.6",
    "@types/better-sqlite3": "^7.6.10",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.7",
    "@types/csurf": "^1.11.5",
    "@types/debug": "^4.1.12",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/gulp": "^4.0.17",
    "@types/gulp-sass": "^5.0.4",
    "@types/http-errors": "^2.0.4",
    "@types/mocha": "^10.0.6",
    "@types/node-windows": "^0.1.6",
    "@types/papaparse": "^5.3.14",
    "@types/session-file-store": "^1.2.5",
    "@types/string-hash": "^1.1.3",
    "cypress": "13.10.0",
    "cypress-axe": "^1.5.0",
    "eslint-config-cityssm": "^3.2.0",
    "gulp": "^5.0.0",
