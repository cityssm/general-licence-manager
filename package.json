{
  "name": "general-licence-manager",
  "version": "1.0.1",
  "type": "module",
  "description": "A tool for managing the licences issued by municipalities.",
  "exports": "./app.js",
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "npx genversion --es6 --semi version.js",
    "start": "cross-env NODE_ENV=production node ./bin/www",
    "dev:live": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:* nodemon ./bin/www",
    "dev:test": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:* TEST_DATABASES=true nodemon ./bin/www",
    "cy:open": "cypress open --config-file cypress.config.ts",
    "cy:run": "cypress run --config-file cypress.config.ts",
    "test": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:* TEST_DATABASES=true mocha --timeout 30000 --exit",
    "coverage": "cross-env NODE_ENV=dev DEBUG=general-licence-manager:* TEST_DATABASES=true c8 --reporter=lcov --reporter=text --reporter=text-summary mocha --timeout 30000 --exit",
    "dev:importFromLegacy": "echo cross-env NODE_ENV=dev DEBUG=general-licence-manager:* node ./temp/importFromLegacy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cityssm/general-licence-manager.git"
  },
  "author": "The Corporation of the City of Sault Ste. Marie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cityssm/general-licence-manager/issues"
  },
  "homepage": "https://github.com/cityssm/general-licence-manager#readme",
  "private": true,
  "dependencies": {
    "@cityssm/bulma-js": "^0.3.3",
    "@cityssm/bulma-webapp-js": "^1.5.0",
    "@cityssm/date-diff": "^2.2.3",
    "@cityssm/expressjs-server-js": "^2.3.2",
    "@cityssm/get-canadian-bank-name": "^0.3.1",
    "@cityssm/modern-julian-date": "^0.1.0",
    "@fortawesome/fontawesome-free": "^5.15.4",
    "activedirectory2": "^2.1.0",
    "better-sqlite3": "^7.6.2",
    "camelcase": "^7.0.0",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cross-env": "^7.0.3",
    "csurf": "^1.11.0",
    "debug": "^4.3.4",
    "ejs": "^3.1.8",
    "exit-hook": "^3.1.0",
    "express": "^4.18.1",
    "express-rate-limit": "^6.6.0",
    "express-session": "^1.17.3",
    "http-errors": "^2.0.0",
    "papaparse": "^5.3.2",
    "pdf-puppeteer": "^1.1.10",
    "session-file-store": "^1.5.0",
    "slugify": "^1.6.5",
    "string-hash": "^1.1.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@cityssm/bulma-webapp-css": "^0.11.0",
    "@cityssm/fa-glow": "^0.1.0",
    "@cityssm/mssql-multi-pool": "^2.1.6",
    "@types/activedirectory2": "^1.2.3",
    "@types/better-sqlite3": "^7.6.0",
    "@types/compression": "^1.7.2",
    "@types/cookie-parser": "^1.4.3",
    "@types/csurf": "^1.11.2",
    "@types/debug": "^4.1.7",
    "@types/ejs": "^3.1.1",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/gulp": "^4.0.9",
    "@types/gulp-changed": "^0.0.35",
    "@types/gulp-minify": "^3.1.1",
    "@types/http-errors": "^1.8.2",
    "@types/mocha": "^9.1.1",
    "@types/node-windows": "^0.1.2",
    "@types/papaparse": "^5.3.5",
    "@types/session-file-store": "^1.2.2",
    "@types/string-hash": "^1.1.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.38.0",
